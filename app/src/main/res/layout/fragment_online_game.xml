<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onlineRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff">

    <!-- Game ID Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/gameIdInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter Game ID"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Players info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/playerXTextOnline"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Player X"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="start"/>

        <TextView
            android:id="@+id/playerOTextOnline"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Player O"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Tic-Tac-Toe Grid -->
    <GridLayout
        android:id="@+id/gridLayoutOnline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- 9 buttons with IDs -->
        <Button android:id="@+id/btn0Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn1Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn2Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn3Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn4Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn5Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn6Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn7Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
        <Button android:id="@+id/btn8Online" android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1" android:textSize="36sp"/>
    </GridLayout>

    <!-- Winner Display -->
    <TextView
        android:id="@+id/winnerTextOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#FF5722"
        android:gravity="center"
        android:paddingTop="16dp"/>

    <!-- Reset Button -->
    <Button
        android:id="@+id/resetButtonOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

</LinearLayout>
